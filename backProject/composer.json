{
	"name": "performance-food/crm",
	"description": "Performance Food Internal CRM for Agents and Clients.",
	"keywords": [
		"crm",
		"performance food"
	],
	"authors": [
		{
			"name": "Daniil Gorelov",
			"email": "dgorelov@p-food.ru",
			"role": "Developer"
		},
		{
			"name": "Vladimir pavlov",
			"email": "exapmle@mail.com",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^7.0.0",
		"firebase/php-jwt": "^5.0",
		"doctrine/inflector": "^1.2",
		"colshrapnel/safemysql": "^1.0",
		"cboden/ratchet": "^0.4.1",
		"evenement/evenement": "^2.0",
		"react/zmq": "^0.3.0",
		"peppeocchi/php-cron-scheduler": "^2.3",
		"vlucas/phpdotenv": "^2.4",
		"robmorgan/phinx": "^0.9.2"
	},
	"require-dev": {
		"roave/security-advisories": "dev-master",
		"squizlabs/php_codesniffer": "3.*",
		"phpdocumentor/phpdocumentor": "2.*"
	},
	"autoload": {
		"psr-4": {
			"App\\": "app",
			"Core\\": "core",
			"Core\\Config\\": "core/config",
			"Safety\\": "safety"
		}
	},
	"scripts": {
		"post-autoload-dump": "curl -s -H \"Accept: text/plain\" https://security.sensiolabs.org/check_lock -F lock=@composer.lock",
		"phpdoc" : "./vendor/bin/phpdoc run -d ./ -t ./doc --ignore \"vendor/*\" ",
		"serve-doc" : "php -S localhost:5000 -t ./doc",
		"phpcs" : "./vendor/bin/phpcs --ignore=\"vendor/*\" ./",
		"phpcbf" : "./vendor/bin/phpcbf --standard=PSR2 --ignore=\/vendor/* ./",
		"migrate" : "./vendor/bin/phinx migrate",
		"rollback" : "./vendor/bin/phinx rollback"
	}
}
